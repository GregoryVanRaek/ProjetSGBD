<Window x:Class="LocationVoiture.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocationVoiture.Presentation"
        mc:Ignorable="d"
        Title="Location Voiture" Height="800" Width="1200">
    <Grid>
        <TabControl>
            <TabItem Header="Clients">
                <ContentControl Content="{Binding ClientView}" />
            </TabItem>
            <TabItem Header="Cars">
                <ContentControl Content="{Binding CarView}" />
            </TabItem>
            <TabItem Header="Rentals">
                <ContentControl Content="{Binding RentalView}" Height="543" />
            </TabItem>
        </TabControl>
        <Button x:Name="button" Content="Button" Margin="164,62,912,672" Click="button_Click"/>

    </Grid>
</Window>
